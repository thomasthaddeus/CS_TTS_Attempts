<Window
    x:Class="ExtractNotes.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    
    <StackPanel Margin="20">
        <Button x:Name="btnBrowse" Content="Browse PPTX File" Click="BtnBrowse_Click" />
        <TextBlock x:Name="txtFilePath" />
        <Button x:Name="btnExtract" Content="Extract Notes" Click="btnExtract_Click" Margin="0,10,0,10" />
        <TextBlock Text="Extracted Files:" FontWeight="Bold" />
        <ListBox x:Name="lstFiles" />
    </StackPanel>
</Window>
